doctype html
html(lang="en")
    head
        title Clubs
        style(type='text/css').
            table {
                font-family: arial, sans-serif;
                border-collapse: collapse;
                width: 100%;
            }

            td, th {
                border: 1px solid #dddddd;
                text-align: left;
                padding: 8px;
            }

            tr:nth-child(even) {
                background-color: #dddddd;
            }

    body
        h1 List of Clubs
            
        table
            tr
                th ID
                th Name
                th Location
                th League
                th Manager
                th Stadium
                th Author
            for club in clubs
                tr
                    th=club.club_id
                    th=club.club_name
                    th=club.location
                    th=club.league
                    th=club.manager
                    th=club.stadium
                    th=club.created_by